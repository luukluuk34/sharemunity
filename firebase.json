{
  "hosting": [
    {
      "target": "sharemunity",
      "public": "dist/dist/apps/sharemunity",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "sharemunity-api",
      "public": "dist/dist/apps/data-api",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "app"
        }
      ]
    }
  ],
  "functions": [
    {
      "source": ".",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "trigger": {
        "httpsTrigger": {}
      }
    }
  ]
}
